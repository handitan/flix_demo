<article>
  <%= image_for(@movie) %>
  <header><h2><%= @movie.title %></h2></header>
  <table>
    <tr>
      <th>Description:</th>
      <td><%= @movie.description %></td>
    </tr>
    <tr>
      <th>Rating:</th>
      <td><%= @movie.rating %></td>
    </tr>
    <tr>
      <th>Released On:</th>
      <td><%= @movie.released_on.to_s(:release_date) %> (<%= time_ago_in_words(@movie.released_on) %> ago)</td>
    </tr>
    <tr>
      <th>Cast:</th>
      <td><%= @movie.cast %></td>
    </tr>
    <tr>
      <th>Director:</th>
      <td><%= @movie.director %></td>
    </tr>
    <tr>
      <th>Duration:</th>
      <td><%= @movie.duration %></td>
    </tr>
    <tr>
      <th>Total Gross:</th>
      <td><%= format_total_gross(@movie) %></td>
    </tr>
  </table>
</article>

<h3>Average Review</h3>
<p>
  <%= format_average_stars(@movie) %>
</p>

<%= format_recent_reviews(@movie) %>

<%= link_to pluralize(@movie.reviews.size,"review"), movie_reviews_path(@movie) %>

<footer>
  <%= link_to "Write Review", new_movie_review_path(@movie)%>
</footer>
<nav>
<%= link_to "Edit", edit_movie_path(@movie) %> |
<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: 'Are you sure?'} %>
</nav>
