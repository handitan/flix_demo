<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<ul>
  <% @movies.each do |movie| %>
  <article class="movie">
    <%= image_for(movie)  %>
    <header><h2><%= link_to movie.title, movie %></h2></header>
    <p>
      <%= truncate(movie.description,length: 20, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Released On:</th>
        <td><%= movie.released_on.to_s(:release_date) %> (<%=time_ago_in_words(movie.released_on)%> ago)</td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Cast:</th>
        <td><%= movie.cast %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= movie.duration %></td>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  <article>
  <% end %>
</ul>
